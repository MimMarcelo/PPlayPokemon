<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mimmarcelo.pplaypokemon.MainActivity">

    <ImageButton
        android:id="@+id/btnBluetooth"
        android:layout_width="@dimen/imagem_padrao"
        android:layout_height="@dimen/imagem_padrao"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/widget_margin"
        android:layout_marginTop="@dimen/widget_margin"
        android:background="@mipmap/icon_bluetooth"
        android:foreground="?android:attr/selectableItemBackground" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/btnPersonagem"
        android:layout_width="@dimen/imagem_padrao"
        android:layout_height="@dimen/imagem_padrao"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/widget_margin"
        android:layout_marginStart="@dimen/widget_margin"
        android:src="@mipmap/icon_personagem"
        android:foreground="?android:attr/selectableItemBackground" />

    <TextView
        android:id="@+id/txtNomePersonagem"
        android:layout_width="@dimen/imagem_padrao"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnPersonagem"
        android:layout_alignStart="@+id/btnPersonagem"
        android:gravity="center_horizontal"
        android:text="@null"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/btnPokemons"
        android:layout_width="@dimen/imagem_padrao"
        android:layout_height="@dimen/imagem_padrao"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/widget_margin"
        android:background="@mipmap/icon_pokebola"
        android:foreground="?android:attr/selectableItemBackground" />

    <ImageButton
        android:id="@+id/btnBatalhar"
        android:layout_width="@dimen/imagem_padrao"
        android:layout_height="@dimen/imagem_padrao"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="@dimen/widget_margin"
        android:layout_marginEnd="@dimen/widget_margin"
        android:background="@mipmap/icon_luta"
        android:foreground="?android:attr/selectableItemBackground" />

</RelativeLayout>
