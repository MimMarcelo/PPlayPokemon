<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mimmarcelo.pplaypokemon.MainActivity">

    <ImageButton
        android:id="@+id/btnBluetooth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/widget_margin"
        android:layout_marginTop="@dimen/widget_margin"
        android:background="@mipmap/icon_bluetooth" />

    <ImageButton
        android:id="@+id/btnPersonagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/widget_margin"
        android:layout_marginStart="@dimen/widget_margin"
        android:background="@mipmap/icon_personagem"
        android:onClick="btnCadastroClick" />

    <ImageButton
        android:id="@+id/btnPokemons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/widget_margin"
        android:background="@mipmap/icon_pokebola" />

    <ImageButton
        android:id="@+id/btnBatalhar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="@dimen/widget_margin"
        android:layout_marginEnd="@dimen/widget_margin"
        android:background="@mipmap/icon_luta" />

</RelativeLayout>
