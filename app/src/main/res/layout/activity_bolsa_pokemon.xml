<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lltBolsaPokemon"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/corPadraoClaraInverso">

    <GridView
        android:id="@+id/gdvBolsaPokemons"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/grid_margin"
        android:horizontalSpacing="@dimen/grid_margin"
        android:numColumns="3"
        android:verticalSpacing="@dimen/grid_margin" />
</RelativeLayout>
