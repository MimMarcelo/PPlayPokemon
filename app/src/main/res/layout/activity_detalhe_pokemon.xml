<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgPokemon"
        android:layout_width="@dimen/imagem_grande"
        android:layout_height="@dimen/imagem_grande"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@mipmap/icon_pokebola" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imgPokemon"
        android:text="@string/especie"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txtEspecie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView1"
        android:layout_toEndOf="@+id/imgPokemon"
        android:text="@null"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/txtEspecie"
        android:layout_toEndOf="@+id/imgPokemon"
        android:text="@string/nome"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/txtNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_toEndOf="@+id/imgPokemon"
        android:ems="10"
        android:hint="@string/nome"
        android:inputType="textPersonName"
        android:text="@null"
        android:textSize="@dimen/texto_label_padrao"
        android:textStyle="bold" />

</RelativeLayout>
